<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task_4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <div id="header" class="header-fixed">
            <div class="container">               
                <div class="row">
                    <div class="row" style="position:absolute;left:20px;">
                        <div><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a></div>
                        <div><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></div>
                    </div>
                    <div class="row" style="position:absolute;right:20px;">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </div>
        <div id="headerImg"> </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Task_4 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
